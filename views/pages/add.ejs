<style>

  .card {
  border-radius: 12px;
  background-color: #ffffff;
}

input.form-control {
  border-radius: 8px;
}

.btn-primary {
  background-color: #4A00E0;
  border: none;
}

.btn-primary:hover {
  background-color: #3a00b3;
}

</style>
<%- layout('design/boilerplate') -%>

<div class="container mt-5">
  <div class="card shadow-sm p-4">
    <h4 class="mb-4 text-center text-primary">Create a New Post</h4>

    <form novalidate class="needs-validation" method="POST" action="/feed">
      <div class="mb-3">
        <label for="post" class="form-label fw-semibold">Picture URL</label>
        <input required type="text" name="feed[post]" id="post" class="form-control" placeholder="Enter image link">
      </div>

      <div class="mb-3">
        <label for="title" class="form-label fw-semibold">Title</label>
        <input required type="text" name="feed[title]" id="title" class="form-control" placeholder="What's on your mind?">
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-primary px-4">Post</button>
      </div>
    </form>
  </div>
</div>
  <script src="js/form-validate.js"></script>
